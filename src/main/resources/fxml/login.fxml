<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="503.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.LoginController">
   <children>
      <ImageView fitHeight="503.0" fitWidth="813.0" preserveRatio="true">
         <image>
            <Image url="@../imagenes/fondoLogin.jpeg" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <TextField fx:id="textFieldUsuario" layoutX="226.0" layoutY="140.0" prefHeight="35.0" prefWidth="228.0" promptText="Usuario" />
      <PasswordField fx:id="textFieldContraseña" layoutX="226.0" layoutY="202.0" prefHeight="35.0" prefWidth="228.0" promptText="Contraseña" />
      <Label alignment="CENTER" layoutX="86.0" layoutY="13.0" prefHeight="85.0" prefWidth="508.0" text="LOGIN">
         <font>
            <Font name="Gill Sans Nova Ultra Bold" size="72.0" />
         </font>
      </Label>
      <Button fx:id="buttonOk" alignment="CENTER" layoutX="523.0" layoutY="166.0" mnemonicParsing="false" onAction="#handleButtonOk" prefHeight="42.0" prefWidth="139.0" text="OK">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font></Button>
      <Label fx:id="labelHora" layoutX="29.0" layoutY="440.0" prefHeight="43.0" prefWidth="164.0">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
       <Button fx:id="buttonInfo" layoutX="678.0" layoutY="25.0" mnemonicParsing="false" onAction="#onActionButtonInfo" prefHeight="29.0" prefWidth="23.0" />
      <Button fx:id="buttonSalir" layoutX="715.0" layoutY="25.0" mnemonicParsing="false" onAction="#handleButtonSalir" prefHeight="25.0" prefWidth="54.0" text="Salir">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</AnchorPane>
